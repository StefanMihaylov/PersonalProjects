@using ChatClient.Services.ParticipantsService
@model IEnumerable<Participant>

    Users online:

@if (Model.Count() > 0)
{
    <ul>
        @foreach (var user in Model)
        {
            <li>
                @user.Username 
                <button class="start-chat pull-right" data-username="@user.Username">Send message</button>
                <span class="clearfix"></span>
            </li>
        }
    </ul>
}
else
{
    <div>
        No users online
    </div>
}
